-- Простой скример с красным экраном и текстом
local function showSimpleScreamer()
    -- Получаем сервис CoreGui
    local CoreGui = game:GetService("CoreGui")
    local TweenService = game:GetService("TweenService")
    
    -- Создаем полноэкранный интерфейс
    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "SimpleScreamer"
    screenGui.IgnoreGuiInset = true
    screenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
    screenGui.DisplayOrder = 999999 -- Высокий приоритет отображения
    
    -- Создаем красный фон
    local background = Instance.new("Frame")
    background.Name = "RedBackground"
    background.BackgroundColor3 = Color3.fromRGB(255, 0, 0) -- Чистый красный
    background.Size = UDim2.new(1, 0, 1, 0)
    background.Position = UDim2.new(0, 0, 0, 0)
    background.BorderSizePixel = 0
    background.Parent = screenGui
    
    -- Создаем текст
    local screamText = Instance.new("TextLabel")
    screamText.Name = "ScreamText"
    screamText.Size = UDim2.new(1, 0, 1, 0)
    screamText.Position = UDim2.new(0, 0, 0, 0)
    screamText.BackgroundTransparency = 1
    screamText.TextColor3 = Color3.fromRGB(255, 255, 255) -- Белый текст
    screamText.TextStrokeColor3 = Color3.fromRGB(0, 0, 0)
    screamText.TextStrokeTransparency = 0
    screamText.Font = Enum.Font.Creepster -- Жуткий шрифт
    screamText.Text = "Я ВИЖУ ТЕБЯ"
    screamText.TextSize = 80
    screamText.Parent = screenGui
    
    -- Применяем ScreenGui к CoreGui
    screenGui.Parent = CoreGui
    
    -- Делаем пульсацию текста для большего эффекта
    spawn(function()
        while screenGui.Parent do
            for i = 0.8, 1.2, 0.05 do
                if not screenGui.Parent then break end
                screamText.TextSize = 80 * i
                wait(0.05)
            end
            for i = 1.2, 0.8, -0.05 do
                if not screenGui.Parent then break end
                screamText.TextSize = 80 * i
                wait(0.05)
            end
        end
    end)
    
    -- Автоматически удаляем скример через некоторое время (10 секунд)
    delay(10, function()
        -- Плавно исчезаем
        local fadeOut = TweenService:Create(
            background,
            TweenInfo.new(2, Enum.EasingStyle.Quad, Enum.EasingDirection.Out),
            {BackgroundTransparency = 1}
        )
        fadeOut:Play()
        
        local textFadeOut = TweenService:Create(
            screamText,
            TweenInfo.new(2, Enum.EasingStyle.Quad, Enum.EasingDirection.Out),
            {TextTransparency = 1, TextStrokeTransparency = 1}
        )
        textFadeOut:Play()
        
        -- Удаляем все после анимации
        wait(2.1)
        screenGui:Destroy()
    end)
end

-- Функция для скримера с изображением из интернета
local function showImageScreamer(imageUrl)
    -- Получаем сервисы
    local CoreGui = game:GetService("CoreGui")
    local TweenService = game:GetService("TweenService")
    local HttpService = game:GetService("HttpService")
    
    -- Создаем полноэкранный интерфейс
    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "ImageScreamer"
    screenGui.IgnoreGuiInset = true
    screenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
    screenGui.DisplayOrder = 999999
    
    -- Создаем черный фон
    local background = Instance.new("Frame")
    background.Name = "Background"
    background.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    background.Size = UDim2.new(1, 0, 1, 0)
    background.BorderSizePixel = 0
    background.Parent = screenGui
    
    -- Создаем изображение
    local image = Instance.new("ImageLabel")
    image.Name = "ScaryImage"
    image.BackgroundTransparency = 1
    image.Size = UDim2.new(1, 0, 1, 0)
    image.Position = UDim2.new(0, 0, 0, 0)
    image.ScaleType = Enum.ScaleType.Stretch
    
    -- Используем изображение из интернета
    if imageUrl and imageUrl ~= "" then
        image.Image = imageUrl
    else
        -- Если URL не указан, показываем стандартный скример с красным экраном
        showSimpleScreamer()
        return
    end
    
    image.Parent = screenGui
    
    -- Добавляем текст "Я ВИЖУ ТЕБЯ"
    local screamText = Instance.new("TextLabel")
    screamText.Name = "ScreamText"
    screamText.Size = UDim2.new(1, 0, 0.2, 0)
    screamText.Position = UDim2.new(0, 0, 0.4, 0)
    screamText.BackgroundTransparency = 1
    screamText.TextColor3 = Color3.fromRGB(255, 0, 0) -- Красный текст
    screamText.TextStrokeColor3 = Color3.fromRGB(0, 0, 0)
    screamText.TextStrokeTransparency = 0
    screamText.Font = Enum.Font.Creepster
    screamText.Text = "Я ВИЖУ ТЕБЯ"
    screamText.TextSize = 80
    screamText.Parent = screenGui
    
    -- Применяем ScreenGui к CoreGui
    screenGui.Parent = CoreGui
    
    -- Пульсация текста
    spawn(function()
        while screenGui.Parent do
            for i = 0.8, 1.2, 0.05 do
                if not screenGui.Parent then break end
                screamText.TextSize = 80 * i
                wait(0.05)
            end
            for i = 1.2, 0.8, -0.05 do
                if not screenGui.Parent then break end
                screamText.TextSize = 80 * i
                wait(0.05)
            end
        end
    end)
    
    -- Автоматически удаляем скример через некоторое время (10 секунд)
    delay(10, function()
        local fadeOut = TweenService:Create(
            background,
            TweenInfo.new(2, Enum.EasingStyle.Quad, Enum.EasingDirection.Out),
            {BackgroundTransparency = 1}
        )
        fadeOut:Play()
        
        local imageFadeOut = TweenService:Create(
            image,
            TweenInfo.new(2, Enum.EasingStyle.Quad, Enum.EasingDirection.Out),
            {ImageTransparency = 1}
        )
        imageFadeOut:Play()
        
        local textFadeOut = TweenService:Create(
            screamText,
            TweenInfo.new(2, Enum.EasingStyle.Quad, Enum.EasingDirection.Out),
            {TextTransparency = 1, TextStrokeTransparency = 1}
        )
        textFadeOut:Play()
        
        wait(2.1)
        screenGui:Destroy()
    end)
end

-- Выберите, какой тип скримера вы хотите использовать:

-- 1. Простой скример с красным экраном и текстом "Я ВИЖУ ТЕБЯ"
showSimpleScreamer()

-- 2. Скример с изображением из интернета
-- ПРИМЕЧАНИЕ: Roblox имеет ограничения на загрузку изображений из интернета.
-- Вам нужно использовать URL изображения, размещенного на сервисах, которые разрешены Roblox.
-- Например, изображения из Asset Library Roblox в формате "rbxassetid://ID_NUMBER"
-- showImageScreamer("rbxassetid://506214724") -- Пример с жутким клоуном
